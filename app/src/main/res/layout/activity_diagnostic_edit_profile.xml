    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="start"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:ripple="http://schemas.android.com/apk/res-auto"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:focusedByDefault="false"
            android:keyboardNavigationCluster="true"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools">
        <RelativeLayout
            android:id="@+id/relative"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:focusedByDefault="false"
            android:keyboardNavigationCluster="true"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/toolappbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/toolbar_gradient"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:layout_scrollFlags="scroll|enterAlways" >

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>

            <ScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:isScrollContainer="true"
                android:layout_below="@+id/toolappbar"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_below="@+id/toolappbar">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="1"
                            android:layout_height="match_parent">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_salutation"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColorHint="#8c8080">
                                <!--<HorizontalScrollView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content">-->
                                <EditText

                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_person_black_24dp"
                                    android:drawablePadding="5dp"
                                    android:ems="20"
                                    android:textSize="15sp"
                                    android:hint="@string/name"
                                    android:inputType="textPersonName" />
                                <!--</HorizontalScrollView>-->
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="1"
                            android:layout_height="match_parent">
                            <android.support.design.widget.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/input_Email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColorHint="#8c8080"
                                android:editable="false">

                                <EditText
                                    android:id="@+id/email"
                                    android:backgroundTint="@color/green"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:hint="@string/email_id"
                                    android:drawablePadding="5dp"
                                    android:drawableLeft="@drawable/ic_mail_black_24dp"
                                    android:ems="20"

                                    android:inputType="textEmailAddress" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/input_Mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColorHint="#8c8080">

                                <EditText
                                    android:id="@+id/mobileNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:backgroundTint="@color/green"
                                    android:drawableLeft="@drawable/phone"
                                    android:drawablePadding="5dp"
                                    android:ems="20"
                                    android:hint="@string/mobile_number"
                                    android:inputType="phone"
                                    android:textSize="15sp" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="3">

                            <TextView
                                android:id="@+id/textView"

                                android:paddingRight="16.5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#2C5E83"
                                android:text="@string/gender" />
                            <android.support.v4.widget.Space
                                android:layout_width="52dp"
                                android:layout_height="wrap_content" />

                            <RadioGroup
                                android:id="@+id/gendertype_radio"

                                android:weightSum="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/maleRadio"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:buttonTint="@color/green"
                                    android:checked="false"
                                    android:layout_weight="1"
                                    android:text="@string/male" />

                                <RadioButton
                                    android:id="@+id/femaleRadio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/green"
                                    android:layout_marginTop="15dp"
                                    android:layout_weight="1"
                                    android:checked="false"
                                    android:text="@string/female" />
                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/licence_number"
                                android:textStyle="bold"
                                android:textColor="#2C5E83"
                                android:layout_marginTop="10dp"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/licence_image"
                                android:textStyle="bold"
                                android:textColor="#2C5E83"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:weightSum="2"
                            android:orientation="horizontal">
                            <MultiAutoCompleteTextView
                                android:layout_weight="1"
                                android:id="@+id/licenceNumber"
                                android:layout_width="match_parent"
                                android:layout_height="195dp"
                                android:textSize="15sp"
                                android:textStyle="normal"
                                android:background="@drawable/edittext_button"/>

                            <android.support.design.widget.CoordinatorLayout
                                android:layout_weight="1"
                                android:id="@+id/main1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp">

                                <android.support.design.widget.AppBarLayout
                                    android:id="@+id/appbar1"
                                    android:layout_width="match_parent"
                                    android:layout_height="196dp">
                                    <ImageView
                                        android:id = "@+id/Licence_Image"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/noimage11"/>

                                </android.support.design.widget.AppBarLayout>

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/Licence_ImageIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:clickable="true"
                                    app:fabSize="mini"
                                    android:src="@android:drawable/ic_menu_camera"
                                    app:layout_anchor="@id/appbar1"
                                    app:layout_anchorGravity="bottom|right|end" />

                            </android.support.design.widget.CoordinatorLayout>


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload_aadhaarimage"
                            android:textStyle="bold"
                            android:textColor="#2C5E83"
                            android:layout_marginTop="10dp"
                            android:textSize="16sp"/>

                        <android.support.design.widget.CoordinatorLayout

                            android:id="@+id/main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="15dp">

                            <android.support.design.widget.AppBarLayout
                                android:id="@+id/appbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/diag_aadhar_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/noimage11" />

                            </android.support.design.widget.AppBarLayout>

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/addDiagAadharIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:clickable="true"
                                android:src="@android:drawable/ic_menu_camera"
                                app:fabSize="mini"
                                app:layout_anchor="@id/appbar"
                                app:layout_anchorGravity="bottom|right|end" />

                        </android.support.design.widget.CoordinatorLayout>

                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_aadhaarNumber"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="14dp"
                                android:layout_height="wrap_content"
                                android:textColorHint="#8c8080">

                                <EditText
                                    android:id="@+id/aadhaarNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:ems="20"
                                    android:textSize="15sp"
                                    android:drawableLeft="@drawable/aadhar_icon"
                                    android:drawablePadding="5dp"
                                    android:hint="@string/aadhaar_number"
                                    android:inputType="number" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:weightSum="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="4dp"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:text="@string/choose_convenient_payment_mode_for_patient"
                                android:textColor="#2C5E83"/>

                        </LinearLayout>


                        <LinearLayout
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.v7.widget.AppCompatCheckBox
                                android:id="@+id/cash_on_hand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="13sp"
                                android:text="@string/cash_on_hand" />
                            <android.support.v7.widget.AppCompatCheckBox
                                android:id="@+id/net_banking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="13sp"
                                android:text="@string/online_banking" />

                            <android.support.v7.widget.AppCompatCheckBox
                                android:id="@+id/swipe_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="13sp"
                                android:text="@string/swipe_cards" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatCheckBox
                                android:id="@+id/doctor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                app:buttonTint="@color/green"/>

                            <android.support.v4.widget.Space
                                android:layout_width="5dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/confirm_register"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:text="@string/i_confirm_that_i_am_a_registered_diagnostic"
                                android:textColor="#ff0000"
                                android:textStyle="bold"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.andexert.library.RippleView
                                android:id="@+id/rippleView"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                ripple:rv_type="rectangle"
                                ripple:rv_zoom="true">

                                <TextView
                                    android:id="@+id/rect_child"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_centerInParent="true"
                                    android:textColor="#fff"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:text="@string/submit"
                                    android:background="#f938a72f"/>

                            </com.andexert.library.RippleView>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true">

            <ExpandableListView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_below="@+id/nav_view"
                android:id="@+id/expandableListView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginTop="139dp"
                android:choiceMode="singleChoice"
                android:divider="#000"
                android:dividerHeight="0.2dp"
                android:groupIndicator="@null"
                android:alpha="255"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">
            </ExpandableListView>

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
