                            android:id="@+id/Address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="20"
                            android:textSize="15sp"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/street_icons"
