<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background5"
    android:orientation="vertical"
    android:id="@+id/container"
    android:focusable="true"

    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linlay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rellay1"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:gravity="center"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="250dp"
                    android:layout_height="100dp"


                    android:scaleType="fitCenter"
                    android:src="@drawable/mtw" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:gravity="center"
            >

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="My Login"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/layoutId"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"


                android:background="@android:color/transparent"
                android:foreground="@drawable/trans_rectangle"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/logintype_radio"
                    android:layout_width="match_parent"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/mobileRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:checked="true"

                        android:text="@string/mobileNumber"

                        android:textColor="@android:color/white" />
                    <RadioButton
                        android:id="@+id/aadharRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/aadhaar_number"

                        android:textColor="@android:color/white" />

                </RadioGroup>

                <EditText
                    android:id="@+id/mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/edittext_button"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="5dp"
                    android:hint="@string/mobileNumber"
                    android:inputType="phone"
                    android:paddingStart="10dp"
                    android:textColor="#000"
                    android:textColorHint="#b8867e7e"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/aadharNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/edittext_button"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="@string/aadhaarNumber"
                    android:inputType="phone"
                    android:paddingStart="10dp"
                    android:textColor="#000"
                    android:textColorHint="#b8867e7e"
                    android:textSize="17dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/edittext_button"
                    android:drawableLeft="@drawable/password1"
                    android:drawablePadding="5dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"
                    android:textColor="#000"
                    android:textColorHint="#b8867e7e"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/cbShowPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Show Password"
                    android:textSize="12dp"
                    android:textColor="@android:color/white" />

                <CheckBox
                    android:id="@+id/remember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Remember mobile number"
                    android:textSize="12dp"
                    android:textColor="@android:color/white" />

                <com.andexert.library.RippleView
                    android:id="@+id/rippleView"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/actionbar"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    ripple:rv_type="rectangle"
                    ripple:rv_zoom="true">

                    <TextView
                        android:id="@+id/rect_child"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="Login"
                        android:background="#f938a72f"/>

                </com.andexert.library.RippleView>


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/dont_have_account"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/new_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:layout_marginStart="5dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15sp"
                        android:text="Sign up"

                        />


                </LinearLayout>


                <TextView
                    android:id="@+id/forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:text="@string/forgotPassword"

                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"


                    />
            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>
