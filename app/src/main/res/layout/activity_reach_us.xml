<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"

    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            tools:context="com.example.kiitsez.aboutus.ReachUs">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"

                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:layout_centerHorizontal="true"
                android:text="Corporate address"/>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:id="@+id/l2_animation"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:clipToPadding="false"

                android:gravity="center"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/bankcardId"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:layout_marginTop="5dp"
                    android:foreground="#1cededed">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="150dp"
                        android:background="@drawable/alertdialog_border"
                        android:layout_height="150dp"
                        android:padding="10dp"
                        android:src="@drawable/location1" />
                    <TextView

                        android:textColor="#000"


                        android:layout_width="wrap_content"
                        android:layout_marginStart="150dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="wrap_content"
                        android:text="@string/address1"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <TextView
                android:id="@+id/text2"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/l2_animation"

                android:text="City Office"/>
            <LinearLayout
                android:id="@+id/l2_animation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:layout_below="@id/text2"
                android:gravity="center"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/bankcardId11"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    app:cardUseCompatPadding="true"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="#1cededed">
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="10dp"
                        android:background="@drawable/alertdialog_border"
                        android:src="@drawable/capture1" />
                    <TextView

                        android:textColor="#000"
                        android:textSize="13dp"

                        android:layout_width="wrap_content"
                        android:layout_marginStart="150dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="wrap_content"
                        android:text="@string/address2"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <TextView

                android:layout_below="@+id/l2_animation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="City Office"
                android:id="@+id/text3"/>

            <LinearLayout
                android:id="@+id/l2_animation2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:layout_below="@id/text3"
                android:gravity="center"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/bankcardId12"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="#1cededed">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/alertdialog_border"
                        android:padding="10dp"
                        android:src="@drawable/location3" />
                    <TextView

                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="150dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="wrap_content"
                        android:text="@string/address3"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>