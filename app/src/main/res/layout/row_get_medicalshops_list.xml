<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dummyimage"
        android:layout_width="50dp"
        android:layout_height="80dp"

        android:layout_marginStart="10dp"
        android:contentDescription="@string/share"


        android:src="@drawable/noimage11"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintHorizontal_bias="0.502"
        tools:ignore="NotSibling" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/docImage"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/share"
        android:layout_marginTop="1dp"
        android:src="@drawable/noimage11"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintHorizontal_bias="0.502"
        tools:ignore="NotSibling" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/doctorName"
                android:textColor="#000080"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appolo Medical Hospital From "
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textColor="#2C5E83"
                android:id="@+id/categorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="@string/cntpersn" />

            <TextView
                android:id="@+id/ContactPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Udaya sri prabhakararaju " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:textColor="#2C5E83"
                android:textSize="12sp"
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/mobile_number_patient" />


            <TextView
                android:textSize="13sp"
                android:id="@+id/phonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8341495888" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2C5E83"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="@string/distance"/>
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.5 Km"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c7c7c7" />

        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:id="@+id/lati"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="12.23"
            android:visibility="gone"
            android:textSize="13dp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/lngi"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="12.23"
            android:visibility="gone"
            android:textSize="13dp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="12.23"
            android:visibility="gone"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/addressId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            android:textColor="#fde402"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/doctorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            android:textColor="#fde402"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            android:textColor="#fde402"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>


