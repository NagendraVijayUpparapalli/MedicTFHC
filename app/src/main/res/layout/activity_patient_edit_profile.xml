<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:id="@+id/relative"
            xmlns:ripple="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:focusedByDefault="false"
            android:keyboardNavigationCluster="true"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
            android:id="@+id/toolappbar"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/toolbar_gradient"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags="scroll|enterAlways" >


            </android.support.v7.widget.Toolbar>


            </android.support.design.widget.AppBarLayout>

            <ScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/scrool"
                android:orientation="vertical"
                android:layout_below="@+id/toolappbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:isScrollContainer="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/toolappbar">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">
                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/input_salutation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:textColorHint="#8c8080">
                                <EditText
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/green"
                                    android:drawableLeft="@drawable/ic_person_black_24dp"
                                    android:drawablePadding="5dp"
                                    android:ems="20"

                                    android:hint="@string/name"
                                    android:inputType="textPersonName"
                                    android:textColor="#000"
                                    android:textSize="20dp" />
                                <!--</HorizontalScrollView>-->
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <android.support.design.widget.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/input_Email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColorHint="#8c8080"
                                android:editable="false"
                                >
                                <EditText
                                    android:id="@+id/email"
                                    android:backgroundTint="@color/green"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/email"

                                    android:drawablePadding="5dp"
                                    android:drawableLeft="@drawable/ic_mail_black_24dp"
                                    android:ems="20"
                                    android:inputType="textEmailAddress" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <android.support.design.widget.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/input_mobileNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColorHint="#8c8080"
                                android:editable="false"
                                >
                                <EditText
                                    android:id="@+id/mobileNumber"
                                    android:layout_width="match_parent"
                                    android:drawableLeft="@drawable/phone"
                                    android:layout_height="wrap_content"
                                    android:ems="10"

                                    android:backgroundTint="@color/green"
                                    android:drawablePadding="5dp"
                                    android:hint="@string/mobileNumber"
                                    android:inputType="phone" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/input_emergencymobileNumber"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content"
                                android:textColorHint="#8c8080"
                                android:editable="false"
                                >
                                <EditText
                                    android:id="@+id/emergencymobileNumber"
                                    android:layout_width="match_parent"
                                    android:hint="@string/emergency_number"

                                    android:drawablePadding="5dp"
                                    android:backgroundTint="@color/green"
                                    android:drawableLeft="@drawable/phone"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:inputType="phone" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="3">
                            <TextView
                                android:id="@+id/textView"
                                android:paddingRight="16.5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"

                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textColor="#2C5E83"
                                android:text="@string/gender" />

                            <RadioGroup
                                android:id="@+id/gendertype_radio"
                                android:weightSum="2"
                                android:layout_marginStart="50dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:id="@+id/maleRadio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:buttonTint="@color/green"
                                    android:checked="false"
                                    android:layout_weight="1"
                                    android:text="Male" />

                                <RadioButton
                                    android:id="@+id/femaleRadio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/green"
                                    android:layout_marginTop="15dp"
                                    android:layout_weight="1"
                                    android:checked="false"
                                    android:text="Female" />
                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/textView2"
                                android:paddingRight="16.5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textColor="#2C5E83"
                                android:text="@string/marital_status" />

                            <RadioGroup
                                android:id="@+id/maritaltype_radio"

                                android:weightSum="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/single"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:buttonTint="@color/green"
                                    android:checked="false"
                                    android:layout_weight="1"
                                    android:text="Single" />

                                <RadioButton
                                    android:id="@+id/married"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/green"
                                    android:layout_marginTop="15dp"
                                    android:layout_weight="1"
                                    android:checked="false"
                                    android:text="Married" />
                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/select_bloodgroup"
                                android:textColor="#2C5E83"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:layout_marginTop="15dp"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:text="@string/blood_group" />
                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/bloodgroup"
                                android:layout_width="60dp"
                                android:layout_marginTop="15dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/select_dob"
                                android:textColor="#2C5E83"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:text="@string/date_of_birth" />

                            <EditText
                                android:id="@+id/date_of_birth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:textColorHint="#8c8080"
                                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                                android:textSize="15dp"
                                android:backgroundTint="@color/green"
                                android:drawablePadding="5dp"
                                android:hint="@string/date_of_birth" />
                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <android.support.design.widget.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/input_address1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColorHint="#8c8080">
                                <EditText
                                    android:id="@+id/address1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="20"
                                    android:drawableLeft="@drawable/house_number_icon"
                                    android:inputType="text"
                                    android:drawablePadding="5dp"
                                    android:layout_marginTop="15dp"
                                    android:textSize="15dp"
                                    android:backgroundTint="@color/green"
                                    android:hint="@string/door_building_no" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/input_address2"
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColorHint="#8c8080">
                                <EditText
                                    android:id="@+id/address2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:ems="20"
                                    android:drawableLeft="@drawable/street_icons"
                                    android:inputType="text"
                                    android:drawablePadding="5dp"
                                    android:textSize="15dp"
                                    android:backgroundTint="@color/green"
                                    android:hint="@string/street_location" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/select_city"
                                android:textColor="#2C5E83"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="0.98"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:text="@string/select_city" />

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:backgroundTint="@color/green"
                                android:layout_weight="1" />

                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/input_pincode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:textColorHint="#8c8080">

                                <EditText
                                    android:id="@+id/pincode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="20"
                                    android:drawableLeft="@drawable/zipcode_icon"
                                    android:inputType="phone"
                                    android:drawablePadding="5dp"
                                    android:textSize="15dp"

                                    android:backgroundTint="@color/green"
                                    android:hint="@string/zip_pincode" />
                                <!--<EditText-->
                                <!--android:id="@+id/pincode"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_weight="1"-->
                                <!--android:ems="8"-->
                                <!--android:drawableLeft="@drawable/phone"-->
                                <!--android:drawablePadding="5dp"-->
                                <!--android:inputType="number"-->
                                <!--android:textSize="15dp"-->
                                <!--android:backgroundTint="@color/green"-->
                                <!--android:hint="Zip/pincode" />-->
                            </android.support.design.widget.TextInputLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/select_district"
                                android:textColor="#2C5E83"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:text="@string/select_district" />

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/district"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:backgroundTint="@color/green"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/select_state"
                                android:textColor="#2C5E83"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:text="@string/select_state" />

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/state"
                                android:layout_width="match_parent"
                                android:layout_marginTop="15dp"
                                android:backgroundTint="@color/green"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />


                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/blood_donor"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:text="@string/i_want_to_donate_my_blood_voluntary"
                            android:textAlignment="center"
                            android:textColor="#ff0000"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#2C5E83"
                            android:layout_marginBottom="5dp"
                            android:text="@string/do_you_want_promotional_offer_updates_from" />
                        <LinearLayout
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <CheckBox
                                android:id="@+id/promotion_medicalstore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="16dp"
                                android:text="@string/medical_store" />

                            <CheckBox
                                android:id="@+id/promotion_diagnostic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:textSize="16dp"
                                android:text="@string/diagnostic_center" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/upload_aadhaarimage"
                                android:textStyle="bold"
                                android:textColor="#2C5E83"
                                android:layout_marginTop="15dp"
                                android:textSize="16dp"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            android:weightSum="1">

                            <android.support.design.widget.CoordinatorLayout

                                android:id="@+id/main"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <android.support.design.widget.AppBarLayout
                                    android:id="@+id/appbar"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    >

                                    <ImageView
                                        android:id="@+id/aadharimage"
                                        android:layout_width="match_parent"
                                        android:layout_height="180dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/noimage11" />

                                </android.support.design.widget.AppBarLayout>

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/addImageIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:clickable="true"
                                    android:src="@android:drawable/ic_menu_camera"
                                    app:fabSize="mini"
                                    app:layout_anchor="@id/appbar"
                                    app:layout_anchorGravity="bottom|right|end" />

                            </android.support.design.widget.CoordinatorLayout>




                        </LinearLayout>

                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.TextInputLayout
                                android:layout_weight="1"
                                android:id="@+id/input_aadhaarNumber"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_height="wrap_content"
                                android:textColorHint="#8c8080">

                                <EditText
                                    android:id="@+id/aadhaarNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:drawableLeft="@drawable/aadhar_icon"
                                    android:drawablePadding="5dp"
                                    android:ems="20"
                                    android:hint="@string/aadhaarNumber"
                                    android:inputType="number" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.andexert.library.RippleView
                                android:id="@+id/rippleView"
                                android:layout_width="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                ripple:rv_type="rectangle"
                                ripple:rv_zoom="true">

                                <TextView
                                    android:id="@+id/rect_child"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_centerInParent="true"
                                    android:textColor="#fff"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:text="@string/submit"
                                    android:background="#f938a72f"/>

                            </com.andexert.library.RippleView>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

            </ScrollView>
        </RelativeLayout>


        <android.support.design.widget.NavigationView


            android:id="@+id/nav_view"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true">

            <ExpandableListView
                xmlns:android="http://schemas.android.com/apk/res/android"

                android:id="@+id/expandableListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginTop="139dp"
                android:choiceMode="singleChoice"
                android:divider="#000"
                android:dividerHeight="0.2dp"

                android:groupIndicator="@null"
                android:alpha="255"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                >
            </ExpandableListView>
        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
