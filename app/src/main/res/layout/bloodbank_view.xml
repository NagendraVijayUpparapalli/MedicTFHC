<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000729"

    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context="com.example.cool.patient.customiseddialog">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_gravity="right"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancel_icon"
                    android:drawableLeft="@drawable/cancel"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dummyimage"
                    android:layout_gravity="center"
                    android:layout_marginTop="40sp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#f30a0808"

                    android:src="@drawable/noimage11" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_gravity="center"
                    android:layout_marginTop="40sp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="#000729"

                    android:src="@drawable/noimage11" />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/bloodbankname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Government General Hospital, Blood Bank"
                    android:textColor="#fff"
                    android:textSize="20dp"

                    android:textStyle="bold"
                    android:textAlignment="center"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/addressline"
                    android:text="Surgery Block,NH 214,Cheediga,Kakinada Danivadipata,Rajamendry,Andhra Pradesh 533001,India"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/city"
                    android:text="Vishakhapatanm"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Andhra pradesh"
                    android:textColor="#fff"
                    android:layout_below="@+id/city"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" udaya sri"
                    android:textColor="#fff"
                    android:layout_below="@+id/state"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"

                android:id="@+id/linlay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rellay1"
                android:layout_marginBottom="40sp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"

                            android:drawableRight="@drawable/phone_icon_bb"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="8465887420"
                            android:textColor="#fff"/>
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:drawableRight="@drawable/ic_sms_black_24dp"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/SMS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Click to sms"
                            android:textColor="#fff"/>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:drawableLeft="@drawable/ic_navigation_black_24dp"
                            android:textAllCaps="true"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/navigate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Navigate"
                            android:textColor="#fff"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
